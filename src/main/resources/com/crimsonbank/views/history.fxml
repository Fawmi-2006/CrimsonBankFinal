<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crimsonbank.controllers.HistoryController">

    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #0055cc, #0066ee); -fx-padding: 20px;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton"
                        text="â† Back"
                        onAction="#handleBackToDashboard"/>
                <Label text="Transaction History"
                       styleClass="label-heading"
                       style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30px;" VBox.vgrow="ALWAYS">
            <HBox spacing="12" style="-fx-min-height: 50px;">
                <ComboBox fx:id="accountCombo"
                          promptText="Select Account"
                          prefWidth="200"
                          styleClass="combo-box"/>
                <DatePicker fx:id="fromDate"
                            promptText="From Date"
                            styleClass="text-field"/>
                <DatePicker fx:id="toDate"
                            promptText="To Date"
                            styleClass="text-field"/>
                <Button fx:id="filterButton" text="ðŸ” Filter"
                        onAction="#handleFilter"
                        styleClass="button-primary"
                        style="-fx-padding: 11px 18px;"/>
            </HBox>

            <TableView fx:id="historyTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" text="Transaction ID" prefWidth="100"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
                    <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="120"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>

