<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" style="-fx-padding: 50px; -fx-background-color: linear-gradient(to bottom, #0f172a, #1e293b);" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.crimsonbank.controllers.LoginController">
    <VBox spacing="20" alignment="CENTER" styleClass="card" style="-fx-padding: 40px; -fx-min-width: 580;">
        <ImageView fx:id="logoImageView" fitWidth="500" preserveRatio="true" styleClass="login-logo" />

        <Separator/>

        <VBox spacing="12">
            <Label text="Username" styleClass="label"/>
            <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field"/>
        </VBox>

        <VBox spacing="12">
            <Label text="Password" styleClass="label"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field"/>
        </VBox>

        <Button fx:id="loginButton" text="Login" styleClass="button-primary" style="-fx-font-size: 14; -fx-padding: 12px 30px;" minWidth="200"/>

        <Separator/>

        <VBox spacing="10" alignment="CENTER">
            <Label text="New staff member?" styleClass="label-small"/>
            <Hyperlink text="Sign up here" fx:id="signupLink" styleClass="hyperlink"/>
        </VBox>

        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #dc2626; -fx-font-size: 11;"/>
    </VBox>
</VBox>
