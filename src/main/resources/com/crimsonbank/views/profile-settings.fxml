<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.crimsonbank.controllers.ProfileSettingsController"
      spacing="20"
      style="-fx-padding: 25px;"
      prefWidth="500">

    <Label text="Profile Settings"
           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

    <Separator/>

    <!-- Profile Picture Section -->
    <VBox spacing="12" style="-fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-padding: 20; -fx-border-radius: 8;">
        <Label text="Profile Picture"
               style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

        <VBox fx:id="avatarContainer" style="-fx-alignment: center; -fx-padding: 20;" minHeight="120"/>

        <HBox spacing="10" style="-fx-alignment: center;">
            <Button fx:id="uploadPhotoButton"
                    text="ðŸ“· Upload Photo"
                    styleClass="button-primary"
                    style="-fx-padding: 10px 20px;"/>
            <Button fx:id="removePhotoButton"
                    text="âŒ Remove Photo"
                    styleClass="button-danger"
                    style="-fx-padding: 10px 20px;"/>
        </HBox>

        <Label fx:id="photoStatusLabel"
               text="No photo uploaded"
               style="-fx-font-size: 12; -fx-text-fill: #64748b;"/>
    </VBox>

    <!-- User Info (Read-only) -->
    <VBox spacing="12" style="-fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-padding: 20; -fx-border-radius: 8;">
        <Label text="Account Information"
               style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

        <HBox spacing="20">
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Name" style="-fx-font-size: 12; -fx-text-fill: #64748b;"/>
                <Label fx:id="nameLabel"
                       text="User Name"
                       style="-fx-font-size: 13; -fx-font-weight: 500;"/>
            </VBox>
            <VBox spacing="6" HBox.hgrow="ALWAYS">
                <Label text="Role" style="-fx-font-size: 12; -fx-text-fill: #64748b;"/>
                <Label fx:id="roleLabel"
                       text="ADMIN"
                       style="-fx-font-size: 13; -fx-font-weight: 500;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="10" style="-fx-alignment: center-right;">
        <Button fx:id="closeButton"
                text="Close"
                styleClass="button-secondary"
                style="-fx-padding: 10px 25px;"/>
    </HBox>

</VBox>
