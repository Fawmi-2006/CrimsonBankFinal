<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crimsonbank.controllers.DashboardController">

    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #0055cc, #0066ee); -fx-padding: 20px;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="CrimsonBank Dashboard"
                       style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="logoutButton"
                        text="Logout"
                        styleClass="button-danger"
                        style="-fx-padding: 8px 20px;"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="12"
              style="-fx-background-color: #f1f5f9; -fx-padding: 20px; -fx-border-color: #e2e8f0; -fx-border-width: 0 1 0 0; -fx-min-width: 220;"
              prefWidth="220">

            <Label text="Navigation"
                   style="-fx-font-size: 13; -fx-font-weight: 700; -fx-text-fill: #0055cc;"/>
            <Separator/>

            <Button fx:id="dashboardBtn"
                    text="ðŸ“Š Dashboard"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="customerBtn"
                    text="ðŸ‘¥ Customers"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="accountBtn"
                    text="ðŸ¦ Accounts"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="transactionBtn"
                    text="ðŸ’° Transactions"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="historyBtn"
                    text="ðŸ“œ History"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="loanBtn"
                    text="ðŸ“‹ Loans"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="reportBtn"
                    text="ðŸ“ˆ Reports"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>
            <Button fx:id="auditBtn"
                    text="ðŸ” Audit Log"
                    style="-fx-alignment: CENTER_LEFT; -fx-padding: 12px 16px; -fx-text-alignment: left;"
                    minWidth="190"/>

            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="24" style="-fx-padding: 30px;">

                <HBox spacing="20">
                    <VBox spacing="8" styleClass="card" prefWidth="200" prefHeight="130">
                        <Label text="Total Customers"
                               styleClass="label-small"
                               style="-fx-text-fill: #64748b;"/>
                        <Label fx:id="totalCustomersLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: 800; -fx-text-fill: #0055cc;"/>
                    </VBox>

                    <VBox spacing="8" styleClass="card" prefWidth="200" prefHeight="130">
                        <Label text="Total Accounts"
                               styleClass="label-small"
                               style="-fx-text-fill: #64748b;"/>
                        <Label fx:id="totalAccountsLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: 800; -fx-text-fill: #10b981;"/>
                    </VBox>

                    <VBox spacing="8" styleClass="card" prefWidth="200" prefHeight="130">
                        <Label text="Total Transactions"
                               styleClass="label-small"
                               style="-fx-text-fill: #64748b;"/>
                        <Label fx:id="totalTransactionsLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: 800; -fx-text-fill: #f59e0b;"/>
                    </VBox>

                    <VBox spacing="8" styleClass="card" prefWidth="200" prefHeight="130">
                        <Label text="Pending Loans"
                               styleClass="label-small"
                               style="-fx-text-fill: #64748b;"/>
                        <Label fx:id="pendingLoansLabel"
                               text="0"
                               style="-fx-font-size: 32; -fx-font-weight: 800; -fx-text-fill: #ef4444;"/>
                    </VBox>
                </HBox>

                <VBox spacing="14" styleClass="card">
                    <Label text="Quick Actions" styleClass="label-subheading" style="-fx-text-fill: #1e293b;"/>
                    <HBox spacing="12">
                        <Button fx:id="quickAddCustomerButton" text="âž• Add Customer"
                                onAction="#handleQuickAddCustomer"
                                styleClass="button-primary"
                                style="-fx-padding: 10px 20px;"/>
                        <Button fx:id="quickCreateAccountButton" text="ðŸª Create Account"
                                onAction="#handleQuickCreateAccount"
                                styleClass="button-success"
                                style="-fx-padding: 10px 20px;"/>
                        <Button fx:id="quickNewTransactionButton" text="ðŸ’³ New Transaction"
                                onAction="#handleQuickNewTransaction"
                                styleClass="button-primary"
                                style="-fx-padding: 10px 20px;"/>
                    </HBox>
                </VBox>

                <VBox spacing="14" styleClass="card">
                    <Label text="System Status" styleClass="label-subheading" style="-fx-text-fill: #1e293b;"/>
                    <HBox spacing="24">
                        <VBox spacing="6">
                            <Label text="Database Connection" styleClass="label-small"/>
                            <Label fx:id="dbStatusLabel"
                                   text="Connected"
                                   style="-fx-text-fill: #10b981; -fx-font-weight: 700; -fx-font-size: 13;"/>
                        </VBox>
                        <VBox spacing="6">
                            <Label text="Last Updated" styleClass="label-small"/>
                            <Label fx:id="lastUpdatedLabel"
                                   text="Just now"
                                   style="-fx-text-fill: #64748b; -fx-font-size: 13;"/>
                        </VBox>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>


