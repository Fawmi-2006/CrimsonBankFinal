<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30px; -fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.crimsonbank.controllers.SignupController">
    <VBox spacing="20" styleClass="card" style="-fx-padding: 30px; -fx-max-width: 420; -fx-alignment: top-center;">
        <Label text="Create Staff Account" styleClass="label-heading" style="-fx-font-size: 28; -fx-text-fill: #0055cc;"/>
        <Separator/>

        <VBox spacing="12">
            <Label text="Full Name" styleClass="label"/>
            <TextField fx:id="fullNameField" promptText="Enter full name" styleClass="text-field"/>
        </VBox>

        <VBox spacing="12">
            <Label text="Email" styleClass="label"/>
            <TextField fx:id="emailField" promptText="Enter email address" styleClass="text-field"/>
        </VBox>

        <VBox spacing="12">
            <Label text="Username" styleClass="label"/>
            <TextField fx:id="usernameField" promptText="Enter username" styleClass="text-field"/>
        </VBox>

        <VBox spacing="12">
            <Label text="Password (minimum 6 characters)" styleClass="label"/>
            <PasswordField fx:id="passwordField" promptText="Enter password" styleClass="password-field"/>
        </VBox>

        <VBox spacing="12">
            <Label text="Role" styleClass="label"/>
            <ComboBox fx:id="roleCombo" promptText="Select role" styleClass="combo-box"/>
        </VBox>

        <Button fx:id="signupButton" text="Create Account" styleClass="button-primary" style="-fx-font-size: 13; -fx-padding: 10px;" minWidth="150"/>

        <Label fx:id="messageLabel" text="" style="-fx-text-fill: #dc2626; -fx-font-size: 11;"/>

        <Hyperlink text="Back to Login" fx:id="backLink" styleClass="hyperlink"/>
    </VBox>
</VBox>
