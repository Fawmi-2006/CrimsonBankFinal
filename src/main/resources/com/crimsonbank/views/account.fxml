<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crimsonbank.controllers.AccountController">

    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #0055cc, #0066ee); -fx-padding: 20px;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton"
                        text="â† Back"
                        onAction="#handleBackToDashboard"
                        style="-fx-padding: 8px 15px;"/>
                <Label text="Account Management"
                       style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30px;">
            <HBox spacing="12">
                <TextField fx:id="searchField" promptText="Search account" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                <Button fx:id="searchButton" text="ðŸ” Search" onAction="#handleSearch" styleClass="button-primary"/>
                <Button fx:id="createButton" text="âž• Create" onAction="#handleCreate" styleClass="button-success"/>
            </HBox>

            <TableView fx:id="accountTable" prefHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" text="Account ID" prefWidth="100"/>
                    <TableColumn fx:id="numberColumn" text="Account Number" prefWidth="150"/>
                    <TableColumn fx:id="customerColumn" text="Customer" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="220"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
