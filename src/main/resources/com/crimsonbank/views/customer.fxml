<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.crimsonbank.controllers.CustomerController">

    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #0055cc, #0066ee); -fx-padding: 20px;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton"
                        text="â† Back to Dashboard"
                        onAction="#handleBackToDashboard"
                        style="-fx-padding: 8px 15px;"/>
                <Label text="Customer Management"
                       style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30px;">
            <HBox spacing="12">
                <TextField fx:id="searchField"
                           promptText="Search by ID, NIC, or Name"
                           HBox.hgrow="ALWAYS"
                           styleClass="text-field"/>
                <Button fx:id="searchButton"
                        text="ðŸ” Search"
                        onAction="#handleSearch"
                        styleClass="button-primary"
                        style="-fx-padding: 11px 20px;"/>
                <Button fx:id="addButton"
                        text="âž• Add New"
                        onAction="#handleAddNew"
                        styleClass="button-success"
                        style="-fx-padding: 11px 20px;"/>
            </HBox>

            <TableView fx:id="customerTable" prefHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="nicColumn" text="NIC" prefWidth="120"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="cityColumn" text="City" prefWidth="100"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="220"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
