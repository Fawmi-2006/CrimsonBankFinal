@startuml CrimsonBank Use Case Diagram
!define RECTANGLE_COLOR #E3F2FD
!define ACTOR_COLOR #0055cc

title CrimsonBank - Use Case Diagram

left to right direction

' Actors
actor "Bank Staff" as Staff <<Primary>>
actor "Teller" as Teller <<Staff Role>>
actor "Customer Service Officer" as CSO <<Staff Role>>
actor "Supervisor" as Supervisor <<Manager Role>>
actor "System Administrator" as Admin <<Admin Role>>

' System Boundary
rectangle "CrimsonBank System" RECTANGLE_COLOR {

  ' Authentication Use Cases
  package "Authentication" {
    usecase (Login) as UC1
    usecase (Logout) as UC2
    usecase (Create Staff Account) as UC3
    usecase (Manage Profile) as UC4
  }

  ' Customer Management Use Cases
  package "Customer Management" {
    usecase (Add Customer) as UC5
    usecase (Edit Customer) as UC6
    usecase (Delete Customer) as UC7
    usecase (Search Customer) as UC8
    usecase (View Customer Details) as UC9
  }

  ' Account Management Use Cases
  package "Account Management" {
    usecase (Create Account) as UC10
    usecase (Update Account) as UC11
    usecase (View Account Details) as UC12
    usecase (Close Account) as UC13
    usecase (Check Balance) as UC14
  }

  ' Transaction Processing Use Cases
  package "Transaction Processing" {
    usecase (Process Deposit) as UC15
    usecase (Process Withdrawal) as UC16
    usecase (Process Transfer) as UC17
    usecase (View Transaction History) as UC18
    usecase (Filter Transactions) as UC19
    usecase (Sort Transactions) as UC20
  }

  ' Loan Management Use Cases
  package "Loan Management" {
    usecase (Submit Loan Request) as UC21
    usecase (Approve Loan) as UC22
    usecase (Reject Loan) as UC23
    usecase (View Pending Loans) as UC24
    usecase (View Approved Loans) as UC25
  }

  ' Reports & Analytics Use Cases
  package "Reports & Analytics" {
    usecase (Generate Transaction Report) as UC26
    usecase (Generate Monthly Report) as UC27
    usecase (Export to CSV) as UC28
    usecase (View Analytics Charts) as UC29
    usecase (View Dashboard Summary) as UC30
  }

  ' Audit & Logging Use Cases
  package "Audit & Logging" {
    usecase (View Audit Log) as UC31
    usecase (Filter Audit Logs) as UC32
    usecase (Track User Actions) as UC33
  }
}

